{
  "name": "@hospitalrun/cli",
  "version": "0.4.0",
  "description": "HospitalRun CLI",
  "bin": {
    "hospitalrun": "bin/hospitalrun.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HospitalRun/cli.git"
  },
  "scripts": {
    "hospitalrun": "npm run build && node bin/hospitalrun",
    "commit": "npx git-cz",
    "build": "npm run clean && tsc -p ./tsconfig.json",
    "clean": "rimraf bin",
    "update": "yarn upgrade-interactive --latest",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "test": "cross-env TS_NODE_PROJECT=./test/tsconfig.json tap test/**/*.ts",
    "test:ci": "cross-env TS_NODE_PROJECT=./test/tsconfig.json tap --coverage-report=text-lcov test/**/*.ts > lcov.info",
    "lint-staged": "lint-staged",
    "commitlint": "commitlint",
    "semantic-release": "semantic-release"
  },
  "keywords": [],
  "author": "Maksim Sinik <maksim@hospitalrun.io>",
  "license": "MIT",
  "dependencies": {
    "@sinclair/typebox": "~0.10.0",
    "ajv": "~6.12.0",
    "chalk": "~4.1.0",
    "glob": "~7.1.6",
    "mkdirp": "~1.0.3",
    "require-from-string": "~2.0.2",
    "sade": "~1.7.3",
    "typescript": "~3.9.3"
  },
  "devDependencies": {
    "@commitlint/cli": "~8.3.5",
    "@commitlint/config-conventional": "~9.0.1",
    "@commitlint/prompt": "~8.3.5",
    "@semantic-release/changelog": "~5.0.0",
    "@semantic-release/commit-analyzer": "~8.0.1",
    "@semantic-release/git": "~9.0.0",
    "@semantic-release/github": "~7.0.4",
    "@semantic-release/release-notes-generator": "~9.0.0",
    "@types/glob": "~7.1.1",
    "@types/mkdirp": "~1.0.0",
    "@types/node": "~14.0.0",
    "@types/require-from-string": "~1.2.0",
    "@types/rimraf": "~3.0.0",
    "@types/sade": "~1.7.0",
    "@typescript-eslint/eslint-plugin": "~3.4.0",
    "@typescript-eslint/parser": "~3.4.0",
    "commitizen": "~4.1.2",
    "commitlint-config-cz": "~0.13.0",
    "cross-env": "~7.0.0",
    "cz-conventional-changelog": "~3.2.0",
    "dotenv": "~8.2.0",
    "eslint": "~7.1.0",
    "eslint-config-prettier": "~6.11.0",
    "eslint-plugin-import": "~2.21.1",
    "eslint-plugin-prettier": "~3.1.0",
    "husky": "~4.2.0",
    "lint-staged": "~10.2.0",
    "prettier": "~2.0.4",
    "rimraf": "~3.0.2",
    "semantic-release": "~17.1.0",
    "tap": "~14.10.5",
    "tap-mocha-reporter": "~5.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "npm run commitlint -- -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint:fix",
      "git add ."
    ]
  },
  "files": [
    "bin"
  ]
}
